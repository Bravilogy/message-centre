# Twitter service
POST http://localhost:8080
Content-Type: application/json
{
    "service": "twitter",
    "payload": {
        "tweet": "This is a cool tweet"
    }
}

# Facebook service
POST http://localhost:8080
Content-Type: application/json
{
    "service": "facebook",
    "payload": {
        "title": "Some title",
        "description": "And its description"
    }
}

# Slack service
POST http://localhost:8080
Content-Type: application/json
{
    "service": "slack",
    "payload": {
        "text": "Hello Slack world"
    }
}
